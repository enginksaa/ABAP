SELECTION-SCREEN BEGIN OF BLOCK b11 FRAME WITH TITLE text-001.
  PARAMETERS : p_num1 TYPE i,
               p_num2 TYPE i,
               p_islem TYPE char.
SELECTION-SCREEN END OF BLOCK b11.

  DATA : gv_num1 TYPE i,
         gv_num2 TYPE i,
         gv_islem TYPE c,
         gv_sonuc TYPE i.

        gv_num1 = p_num1, 
        gv_num2 = p_num2,
        gv_islem = p_islem.
        

  IF     p_num1 IS INITIAL,
     AND p_num2 IS INITIAL,
     AND p_islem IS INITIAL.
     WRITE : /'LÃœTFEN ALANLARI DOLDURUNUZ ! '.  
 ENDIF. 
  
  CASE p_islem
     WHEN +
           gv_sonuc = gv_num1 + gv_num2.
           WRITE : /'SONUC :' , gv_sonuc.
     
     WHEN -
       IF gv_num1 > gv_num2.
           gv_sonuc = gv_num1 - gv_num2.
           WRITE : /'SONUC :' , gv_sonuc.
       ELSE 
           gv_sonuc = gv_num2 - gv_num1.
           WRITE : /'SONUC :' , gv_sonuc.
       ENDIF
     WHEN *
     gv_sonuc = gv_num1 * gv_num2.
     WRITE : /'SONUC :' , gv_sonuc.
     
     WHEN /
       IF gv_num1 > gv_num2.
          gv_sonuc = gv_num1 / gv_num2.
           WRITE : /'SONUC :' , gv_sonuc.
       ELSE 
           gv_sonuc = gv_num2 / gv_num1.
           WRITE : /'SONUC :' , gv_sonuc.
       ENDIF
